{
  "name": "pdga/data-objects",
  "type": "library",
  "description": "Custom data object classes used by the PDGA.",
  "keywords": [],
  "homepage": "https://github.com/PDGA/php-data-objects",
  "license": "MIT",
  "authors": [
    {
      "name": "PDGA",
      "email": "technology@pdga.com",
      "homepage": "https://www.pdga.com",
      "role": "Developer"
    }
  ],
  "scripts": {
    "sniff": "vendor/bin/phpcs --standard=vendor/pdga/coding-standards/src/ruleset.xml ./src",
    "format": "vendor/bin/phpcbf --standard=vendor/pdga/coding-standards/src/ruleset.xml ./src",
    "format-verbose": "vendor/bin/phpcbf --standard=vendor/pdga/coding-standards/src/ruleset.xml ./src -v"
  },
  "require": {
    "php": ">=8.2",
    "pdga/exception": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "PDGA\\DataObjects\\": "src/"
    }
  },
    "repositories":[
        {
            "type": "vcs",
            "url": "https://github.com/PDGA/coding-standards.git"
        }
    ],
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "pdga/coding-standards": "^1.0"
  }
}
